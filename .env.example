# API Configuration
API_PORT=8000
API_HOST=localhost
NODE_ENV=development

# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/showcase
DATABASE_TEST_URL=postgresql://postgres:postgres@localhost:5432/showcase_test

# Firebase Configuration
FIREBASE_API_KEY=your-api-key
FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_STORAGE_BUCKET=your-project.appspot.com
FIREBASE_MESSAGING_SENDER_ID=your-sender-id
FIREBASE_APP_ID=your-app-id
FIREBASE_MEASUREMENT_ID=your-measurement-id

# Cloudinary Configuration
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# Google Maps API Key (for location services)
GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# JWT Secret (for backend authentication)
JWT_SECRET=your-jwt-secret
JWT_EXPIRATION=24h

# Sentry Configuration
SENTRY_DSN=your-sentry-dsn

# Feature Flags
ENABLE_SOCIAL_FEATURES=true
ENABLE_VERIFIED_CHECKINS=true
ENABLE_GUARDIAN_CONTROLS=true

# Mobile App Configuration
EXPO_PUBLIC_API_URL=http://localhost:8000/api
